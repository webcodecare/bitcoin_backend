# Production Environment Configuration
# Copy this file and configure for your deployment platform

# Database Configuration (Replace with your production database URL)
DATABASE_URL=your_production_postgresql_url_here

# JWT Configuration (Generate a strong secret for production)
JWT_SECRET=your_production_jwt_secret_here_minimum_32_characters

# Server Configuration
PORT=5000
NODE_ENV=production

# SwiftLead API Configuration (CORS Bypass Solution)
MARKET_DATA_SOURCE=swiftlead
SWIFTLEAD_API_BASE_URL=https://swiftlead.site/api/market/price
ENABLE_SWIFTLEAD_PROXY=true

# CORS Configuration for Frontend
ALLOWED_ORIGINS=https://crypto-kings-frontend.vercel.app,https://swiftlead.site
CORS_ORIGIN=https://crypto-kings-frontend.vercel.app,https://swiftlead.site,https://your-domain.com

# Fallback Configuration
ENABLE_BINANCE_FALLBACK=true
ENABLE_COINCAP_FALLBACK=true
ENABLE_MOCK_FALLBACK=false

# Optional: SwiftLead API Authentication (if required)
SWIFTLEAD_API_KEY=your_swiftlead_api_key_here
SWIFTLEAD_API_SECRET=your_swiftlead_secret_here

# Notification Services (Optional)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_phone
SENDGRID_API_KEY=your_sendgrid_key
TELEGRAM_BOT_TOKEN=your_telegram_token

# Email Configuration (Optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# External API Keys (Optional)
BINANCE_API_KEY=your_binance_key
BINANCE_API_SECRET=your_binance_secret
COINCAP_API_KEY=your_coincap_key